%nav.navbar.navbar-expand.navbar-light.bg-light
  #container.w-100
    = link_to 'Covers', root_path, :class => "navbar-brand nav-link d-inline"
    %ul.nav.navbar-nav.d-inline-flex
      %li.nav-item.active
        = link_to t('.home'), root_path, :class => "nav-link"
      %li.nav-item
        = link_to t('.about'), about_path, :class => "nav-link"
      %li.nav-item
        = link_to t('.help'), help_path, :class => "nav-link"
      %li.nav-item.mt-2.ml-4
        = link_to image_tag('Russia.png', alt: "",  style: "width: 20px; height: 20px", title: "Русский" ),
          locale: :ru, :class => "nav-link"
      %li.nav-item.mt-2.mx-1
        = link_to image_tag("United_Kingdom.png", alt: "",  style: "width: 20px; height: 20px", title: "English"),
          locale: :en, :class => "nav-link"
      %li.nav-item.locale
        = I18n.locale
    %ul.nav.navbar-nav.navbar-right.d-inline-flex.float-right.right-nav
      - if signed_in?
        %li.logged.nav-item.mt-2.mx-2
        = image_tag("user.png", alt: "",  style: "width: 35px; height: 42px; padding-top: 8px;")
        %li.nav-item.mt-2.pr-5
          %a.dropdown-toggle{"data-toggle" => "dropdown",
   :href => "#"}
            =t('.person')
            %b.caret
          %ul.dropdown-menu
            %li= link_to t('.profile'), current_user
            %li= link_to t('.settings'), '#'
            %li.divider
            %li
              = link_to t('.sign_out'), signout_path, method: "delete"
      - else
        %li.nav-item.mt-2.mx-4
          = link_to t('.sign_in'), signin_path




